html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css' integrity='sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2' crossorigin='anonymous')
    title Hello Webpack
  body
    .container
      h3 Form for e2e testing.

      form(name="test-form" style="margin-top: 20px")
        div(class="form-group")
          label(for="inputName") Name.
          input(type="text" class="form-control" name="name" id="inputName")

        div(class="form-group")
          label(for="inputSurname") Surname.
          input(type="text" class="form-control" name="surname" id="inputSurname")

        div(class="form-group")
          label(for="inputPatronymic") Patronymic.
          input(type="text" class="form-control" name="patronymic" id="inputPatronymic")

        div(class="form-group")
          label(for="inputAge") Age.
          input(type="number" class="form-control" name="age" id="inputAge")

        div(class="form-group form-check")
          input(type="checkbox" class="form-check-input" id="formCheckbox")
          label(for="formCheckbox" class="form-check-label") Check me out.

        button(type="submit" class="btn btn-primary") Submit.


  script.
    const form = document.querySelector('form[name="test-form"]');

    if(form) {
      form.addEventListener('submit', (event) => {
        event.preventDefault();

        const inputs = form.querySelectorAll('input[class="form-control"]');
        const checkboxes = form.querySelectorAll('input[class="form-check-input"]');

        inputs.forEach(input => {
          input.value = '';
        });

        checkboxes.forEach(checkbox => {
          checkbox.checked  = false;
        });

      });

    };
