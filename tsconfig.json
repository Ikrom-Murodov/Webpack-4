{
  "compilerOptions": {
    "module": "ES2015",
    "noImplicitAny": true,
    "removeComments": true,
    "sourceMap": true,
    "outDir": "src/js",
    "target": "ES2017",
    "noEmitOnError": true,
    "moduleResolution": "node",
    "strict": true
  },
  "include": ["src/**/*", "typings/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
